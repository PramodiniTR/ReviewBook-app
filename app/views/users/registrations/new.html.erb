<div class="col-lg-6 mx-lg-auto">
  <div class="card-shadow">
      <div class="card-headder">
        <h2 class="card-title text-center">SIGN UP</h2>
      </div>
      <div calss="card-body">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>
 
        <div class="form-group mb-2">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-contrl-lg" %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-contrl-lg" %>
        </div>

        <div class="form-group mb-2">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-contrl-lg" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>

    </div>
  </div>